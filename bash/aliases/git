#! /bin/bash

alias branch="git branch --show-current"


# simplify git for solo development
function g() {
    if [[ $# -eq 1 ]]; then
        git add .
        git commit -m "$@"
        git push
    else
        echo
        echo "Usage:"
        echo "  Current directory must be a repo"
        echo
        echo "Args:"
        echo "  Commit Message"
        echo
        echo "Example:"
        echo "  g \"<commit_message>\""
    fi
}

# simplify git add
function ga() {
    if [[ $# -gt 0 ]]; then
        git add "$@"
    else
        git add .
    fi
}

# simplify git commit
alias gc="git commit -m"

# simplify git push, pull
alias gp="git push"
alias gpu="git push --set-upstream origin $(branch)"
alias gpl="git pull"

# simplify git create and switch to new branch
alias gb="git checkout -b"
