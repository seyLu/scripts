#!/bin/bash

source "${_SCRIPTS_PATH}/__init__"

[[ "$_DEBUG" == "true" ]] && set -x

#------------------------------------------------------------------------#
# CIC specific alias
#------------------------------------------------------------------------#

work_path="$(extract_value_assoc "${_PATHS}" "work")"
cic_path="${work_path}/Erudifi/CIC/cic-loantape"
readonly work_path
readonly cic_path

function main() {
    [[ $# -eq 0 ]] && {
        change_dir
        return
    }

    local options
    options=$(
        getopt -o xdXs: --long start,dump,stop,snapshot: -- "$@"
    )

    [[ $? -ne 0 ]] && {
        log::error "incorrect options provided"
        return
    }

    eval set -- "${options}"

    while [[ $# -gt 0 ]]; do
        case "$1" in
        -x | --start)
            docker_start
            break
            ;;
        -d | --dump)
            docker_dump
            break
            ;;
        -s | --snapshot)
            docker_dump "$2"
            break
            ;;
        -X | --stop)
            docker_stop
            break
            ;;
        --)
            shift
            break
            ;;
        *)
            usage
            break
            ;;
        esac
    done
}

function change_dir() {
    gnome-terminal --working-directory="${cic_path}" --no-environment --tab
    gnome-terminal --working-directory="${cic_path}" --no-environment --tab
}

function docker_start() { docker-compose up; }
function docker_stop() { docker-compose down; }
function usage() {
    echo
    printf '%s\n' "CIC specific alias"
}

function docker_dump() {
    if [[ $# -eq 0 ]]; then
        cic -s 20230131
        cic -s 20230228
        cic -s 20230331
    else
        docker-compose exec web flask makedump --snapshot "$1"
    fi
}

main "$@"

[[ "$_DEBUG" == "true" ]] && set +x
