#! /bin/bash

source "${_SCRIPTS_PATH}/__init__"

[[ "$_DEBUG" == "true" ]] && set -x

#------------------------------------------------------------------------#
# Hutility specific git alias
#------------------------------------------------------------------------#


function main() {
    [[ $# -eq 0 ]] && help && return;
    [[ $# -eq 1 ]] && {
        git add .
        git commit -m "$1"
        return
    }

    choices "$@"
}


function choices() {
    local options=$(
        getopt -o p,f --long push,safe_force_push -- "$@"
    )

    [[ $? -ne 0 ]] && {
        echo "Incorrect options provided"
        exit 1
    }

    eval set -- "${options}"

    while [[ $# -gt 0 ]]; do
        case "$1" in
            -p | --push) git push; break ;;
            -f | --safe_force_push) git push --force-with-lease --force-if-includes; break ;;
            --) shift; break ;;
            *) list_config; break ;;
        esac
    done
}


function help() {
    echo
    echo "Hutility specific git alias"
    echo
}


main "$@"

[[ "$_DEBUG" == "true" ]] && set +x
