#! /bin/bash

source "${_SCRIPTS_PATH}/__init__"

[[ "$_DEBUG" == "true" ]] && set -x

#------------------------------------------------------------------------#
# Instaff specific commands
#------------------------------------------------------------------------#

readonly instaff_path="/home/seylu/Documents/Work/55"
readonly -a instaff_containers=(
    "db"
    "webproxy"
    "instaff_app"
)
readonly -a instaff_missing_deps=(
    "pypdf2"
    "sentry_sdk"
)
readonly instaff_app="instaff_app"
readonly config_ini_path="$(find "${instaff_path}" -maxdepth 2  -type f -name "config.ini")"
readonly config_ini_docker_path="$(find "${instaff_path}" -type f -name "config.ini.docker")"


function main() {
    [[ $# -eq 0 ]] && help && return;

    choices "$@"
}


function choices() {
    local options=$(
        getopt -o iIxXema:n --long init,down,start,stop,error_log,migrate,app:ngrok -- "$@"
    )

    [[ $? -ne 0 ]] && {
        echo "Incorrect options provided"
        exit 1
    }

    eval set -- "${options}"

    while [[ $# -gt 0 ]]; do
        case "$1" in
            -i | --init)
                docker compose -f "${instaff_path}/docker/docker-compose.yml" up -d "${instaff_containers[@]}"
                docker exec -it "${instaff_app}" bash -c " \
                    sed -i 's/\/usr\/libexec\///g' /etc/ssh/sshd_config; \
                    pip install ${instaff_missing_deps[*]} \
                "
                break ;;
            -I | --down) docker compose -f "${instaff_path}/docker/docker-compose.yml" down; break ;;
            -x | --start) docker compose -f "${instaff_path}/docker/docker-compose.yml" up -d "${instaff_containers[@]}"; break ;;
            -X | --stop) docker compose -f "${instaff_path}/docker/docker-compose.yml" stop "${instaff_containers[@]}"; break ;;
            -e | --error_log) docker exec -it "${instaff_app}" bash -c "tail /var/log/instaff/error_log.log -n 40"; break ;;
            -m | --migrate) docker exec -it "${instaff_app}" bash -c "cd www/hudbmigrator; python hudami.py --run"; break ;;
            -a | --app)
                if [[ $# -eq 3 ]]; then
                    docker exec -it "${instaff_app}" bash -c "cd www; python instaff_${2}.py"
                else
                    docker exec -it "${instaff_app}" bash -c "cd www; python instaff_web.py"
                fi
                break ;;
            -n | --ngrok)
                ngrok http --host-header=rewrite localhost:8066 &
                readonly ngrok_pid=$!
                (
                    sleep 5
                    readonly ngrok_url="$(curl -s http://127.0.0.1:4040/api/tunnels | grep -o --color=never '"public_url":"[^"]*' | sed 's/"public_url":"//')"

                    readonly postback_url_env="PDFPROCESSOR_JOB_POSTBACK_URL"
                    readonly postback_url="${ngrok_url}/api/v3/pdfprocessor_postback"

                    sed -i "s|${postback_url_env}=.*|${postback_url_env}=${postback_url}|" "${config_ini_path}"
                    sed -i "s|${postback_url_env}=.*|${postback_url_env}=${postback_url}|" "${config_ini_docker_path}"

                    to_docker_config "PDFPROCESSOR_JOB_API_KEY"
                )
                wait "${ngrok_pid}"
                break ;;
            --) break ;;
            *) help; break ;;
        esac
    done
}


function help() {
    echo
    echo "Instaff specific commands"
    echo
}


function get_env() { grep --color=never "${1}" "${config_ini_path}" | sed "s/${1}=//"; }
function to_docker_config() {
    readonly key="$1"
    readonly val="$(get_env "$1")"

    sed -i "s|${key}=.*|${key}=${val}|" "${config_ini_docker_path}"
}


main "$@"

[[ "$_DEBUG" == "true" ]] && set +x
